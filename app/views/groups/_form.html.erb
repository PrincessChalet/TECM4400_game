<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="form-control-group">
    <%= form.file_field :image %>
    <% if @group.image? %>
      <%= image_tag @group.image.url, class: "group-show" %>
      <%= form.check_box :remove_image %>
        Remove Image
      <% end %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :experience_level %>
    <%= form.select :experience_level, options_for_select(["Noobs", "Intermediate", "Advanced"], :prompt => 'Select One'), class: "form-control"%>
  </div>

<!-- set user_id to the current user to associate groups with the user that created them -->
 <!-- user_id = f.hidden_field :user_id , :value => current_user.id-->


  <div class="form-group">
    <%= form.label :create_date %>
    <%= form.datetime_select :create_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
