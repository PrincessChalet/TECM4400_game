<div class="container">
<p id="notice"><%= notice %></p>

<h1>Groups</h1>
  <div class="box_container_container">
        <div class="box_container">
          <div class="group_box">
          <h3><%= link_to 'Create New Group', new_group_path%></h3>
          </div><!--group_box-->
        </div><!--box_container-->
      </div><!--box_container_container-->
   <div class="row">
  <% @groups.each do |group| %>
  <div class="group_container">
    <div class="group-box">
      <% if group.image? %>
        <%= link_to (image_tag group.image.url, class: "group-index"), group %>
      <% end %>
      <ul>
      <li><%= group.name %></li>
      <li><%= group.experience_level %><li>
      <th><%= group.event_id %></li>
      <li><%= group.game_id %></li>
      <li><%= group.description %></li>
      <li><%= group.create_date %></li>
      
      
  <p id="join"><%= link_to 'Join Group', join_group_path(group)%></p>|
  
  <!-- only show these buttons if the user created the group-->
 <% if (user_signed_in? && (current_user.id == group.user_id)) %>
      <p><%= link_to 'View', group %></p>|
      <p><%= link_to 'Edit', edit_group_path(group) %></p>|
      <p><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></p>
 <% end %>
      </ul>
    </div>
    <br>
    <% end %>
</div>
<br>

</div>