<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user_id %></td>
        <td><%= membership.group_id %></td>
        <td><%= link_to 'Show', membership %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= User.all.each do |each_user| %> 
    <div class="group_container">
  <%= each_user.email %>      <div class="group-box">
  <%= link_to "Join this group", join_group_path(each_user) %>`       <ul>
   <br />      
      <li><%= each_user.email %></li>
      <li><%= each_user.created_at %></li>
      <li><%= each_user.username %></li>  
      </ul>
       <br />
    </div>
    <% end %>

<%= Group.all.each do |group| %> 
    <div class="group_container">
    <div class="group-box">
  <%= link_to "Join this group", join_group_path(group) %>`       <ul>
   <br />      
      <li><%= group.name %></li>
      </ul>
       <br />
    </div>
    <% end %>


<%= link_to 'New Membership', new_membership_path %>
